<style>
  .username{
    text-align: left;
  }
  .song{
    text-align: center;
  }
  .review{
    text-align: right;
  }
.title {
  text-align: center;
  font-size: xx-large;
  color: white;
}
body {
  font-family: "trebuchet", Trebuchet MS;
  background-image: url(<%- dailyImg.hdurl -%>);
}
.jumbotron {
  width: 60%;
  text-align: center;
  font-family: "trebuchet", Trebuchet MS;
  margin: auto;
  border-radius: 50px;
}

.search-button{
  background-color: #222222;
  border: none;
  cursor:pointer;
  font-family: "trebuchet", Trebuchet MS;
  border-radius: 50px;
  width: 15%;
  height:4%;
  color: #808080;
  overflow: hidden;
  margin-top: 2%;
}
.container{
  border-radius:50px;
}


</style>
<div class="bigDiv">
  <%- include('../partials/header'); -%>
  <br />
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
  />
  <script
    src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"
  ></script>
  <div class="jumboHolder">
    <div class="jumbotron text-center" style="background-color: #808080">
      <h1 class="display-4">Welcome</h1>
      <p class="lead">View reviews below</p>
      <br />
      <form class="">
        <div class="row" style="width:50%; margin:0 auto; border-radius: 50px;">
          <div class="col-4 searchbox">
            <input class="form-control" type="text" name="username" placeholder="Enter a user to view" style="text-align: center; border-radius: 50px;">
          </div>
        </div>
        <button class = "search-button" formaction="/reviews" formmethod="post" type="submit">
          Search
        </button>
      </form>
    </div>
  </div>

  <div class="container">
    <% for(var i=0; i < songs.length; i++) { %>
      <div class="jumbotron text-center" style="background-color: #808080; border-radius: 50px;">
            <p class = "username">  <%= songs[i].username %></p>
            <p class = "song">  <%= songs[i].song %></p>
            <p class = "review">  <%= songs[i].review %></p>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer'); -%>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="resources/js/script.js"></script>
</div>
